<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/com/github/tvale/xkcdesktop/" id="com.github.tvale.xkcdesktop">
    <key name="window-maximized" type="b">
      <default>false</default>
      <summary>Maximized</summary>
      <description>Whether the window is maximized</description>
    </key>
    <key name="window-position" type="(ii)">
      <default>(10, 10)</default>
      <summary>Window position</summary>
      <description>Most recent window position (x, y)</description>
    </key>
    <key name="window-size" type="(ii)">
      <default>(250, 250)</default>
      <summary>Window size</summary>
      <description>Most recent window size (width, height)</description>
    </key>
    <key name="zoom-mode" type="i">
      <default>0</default>
      <summary>Zoom Mode</summary>
      <description>Whether to fit the comic to the window size (0) or view its original size (1)</description>
    </key>
    <key name="current-comic-id" type="s">
      <default>""</default>
      <summary>Current comic ID</summary>
      <description>The ID of the comic the user is currently viewing</description>
    </key>
  </schema>
</schemalist>
